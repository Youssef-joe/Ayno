# Polyglot Production Configuration
# Copy to .env and fill in actual values

# ============================================================================
# REQUIRED - Application Secrets
# ============================================================================

# Generate with: openssl rand -hex 32
SECRET_KEY_BASE=your-secret-key-base-here-generate-randomly

# Generate with: openssl rand -base64 32
JWT_SECRET=your-jwt-secret-here-generate-randomly

# ============================================================================
# Application Configuration
# ============================================================================

# Port on which the Elixir server listens
APP_PORT=4000

# Public hostname (used in URL generation)
APP_HOST=localhost

# Environment: dev, staging, prod
MIX_ENV=prod

# Log level: debug, info, warn, error
LOG_LEVEL=info

# ============================================================================
# CORS Configuration
# ============================================================================

# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,https://app.example.com

# ============================================================================
# Redis Configuration
# ============================================================================

# Redis host
REDIS_HOST=redis

# Redis port
REDIS_PORT=6379

# Redis database number (0-15)
REDIS_DB=0

# ============================================================================
# Go Processor Configuration
# ============================================================================

# URL of the Go processor service
GO_PROCESSOR_URL=http://go-processor:8080

# ============================================================================
# Monitoring & Error Tracking (Optional)
# ============================================================================

# Sentry DSN for error tracking (optional, leave empty to disable)
SENTRY_DSN=

# ============================================================================
# API Keys & Authentication
# ============================================================================

# Store API keys in Redis or database in production
# Format: {app_id}_{random_hash}
# Example: demo-app_abcdef1234567890abcdef1234567890
